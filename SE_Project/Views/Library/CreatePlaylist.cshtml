@model SE_Project.Models.Playlist

@{
    ViewData["Title"] = "Create Playlist";
    Layout = "_LayoutHome";
}


    <h2 class="mb-4">Create a New Playlist</h2>

    <form asp-action="CreatePlaylist" asp-controller="Library" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name">Playlist Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="IsPublic">Public?</label>
            <input asp-for="IsPublic" class="form-check-input ms-2" type="checkbox" />
            <span asp-validation-for="IsPublic" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Create Playlist</button>
    </form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}