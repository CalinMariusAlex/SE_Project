@model SE_Project.Models.Song
@{
    ViewData["Title"] = "Editează Melodie";
}

<h2>Editează Melodie</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Artist"></label>
        <input asp-for="Artist" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ThumbnailUrl"></label>
        <input asp-for="ThumbnailUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AudioUrl"></label>
        <input asp-for="AudioUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Salvează</button>
</form>
